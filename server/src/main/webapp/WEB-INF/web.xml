<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>LabradBrowser.html</welcome-file>
  </welcome-file-list>

  <listener>
    <listener-class>org.labrad.browser.server.LabradConnectionListener</listener-class>
  </listener>

  <session-config>
    <session-timeout>5</session-timeout>
  </session-config>


  <servlet>
    <servlet-name>rest-api-servlet</servlet-name>
    <servlet-class>
      org.glassfish.jersey.servlet.ServletContainer
    </servlet-class>
    <init-param>
      <param-name>jersey.config.server.provider.packages</param-name>
      <param-value>org.labrad.browser.server</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>rest-api-servlet</servlet-name>
    <url-pattern>/labradbrowser/api/*</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>websocket-api-servlet</servlet-name>
    <servlet-class>org.labrad.browser.server.LabradSocketServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>websocket-api-servlet</servlet-name>
    <url-pattern>/ws/api</url-pattern>
  </servlet-mapping>

</web-app>
