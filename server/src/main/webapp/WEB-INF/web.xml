<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>LabradBrowser.html</welcome-file>
  </welcome-file-list>

  <listener>
    <listener-class>org.labrad.browser.server.BrowserServletConfig</listener-class>
  </listener>

  <listener>
    <listener-class>org.labrad.browser.server.ClientEventQueue$SessionListener</listener-class>
  </listener>

  <listener>
    <listener-class>org.labrad.browser.server.LabradConnection</listener-class>
  </listener>

  <session-config>
    <session-timeout>5</session-timeout>
  </session-config>

  <!-- filter everything through Guice -->
  <filter>
    <filter-name>guiceFilter</filter-name>
    <filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
    <async-supported>true</async-supported>
  </filter>
  <filter-mapping>
    <filter-name>guiceFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <async-supported>true</async-supported>
  </filter-mapping>

</web-app>
