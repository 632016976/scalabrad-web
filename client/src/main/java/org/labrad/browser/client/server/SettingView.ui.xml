<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <ui:style>
    .setting {
      /*background: #F3F3F3;*/
      background: #f3f7fb;
      padding: 1em;
      margin-bottom: 1em;
    }

    .setting h3 {
      margin-top: 0;
      margin-bottom: 0.75em;
    }

    .doc {
      margin-bottom: 1em;
    }

    .types {
      border: 0 solid #AAAAAA;
      /*background: #EEEEEE;*/
      padding: 0 0 0 1em;
      /*margin-bottom: 1em;*/
    }

    .typeset {
      margin-bottom: 0.5em;
    }

    .types ul {
      display: inline-block;
      margin: 0;
      padding-left: 0;
    }

    .types ul li {
      display: inline-block;
      font-family: courier, monospace;
      padding: 2px;
      margin-right: 0.5em;
      border: 1px solid #DEB887; /*#AAAAAA;*/
      background: #FFEBCD; /*#DDDDDD;*/
    }
  </ui:style>

  <g:HTMLPanel>
    <div class='{style.setting}'>
      <h3><span ui:field='id'></span>: <span ui:field='name'></span></h3>
      <div ui:field='doc' class='{style.doc}'></div>
      <div class='{style.types}'>
        <div class='{style.typeset}'>
          <span>Accepts:</span>
          <ul ui:field='accepted'></ul>
        </div>
        <div>
          <span>Returns:</span>
          <ul ui:field='returned'></ul>
        </div>
      </div>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
